generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id      String   @id @default(uuid())
  name    String?
  email   String   @unique
  age     Int      @default(1)
  role    Role     @default(BASIC)
  posts   Post[]
  profile Profile?

  @@unique([email, age])
}

model Profile {
  id      String  @id @default(uuid())
  name    String
  age     Int
  isAdmin Boolean
  adress  String
  User    User    @relation(fields: [userId], references: [id])
  userId  String  @unique
}

model Post {
  id       String     @id @default(uuid())
  name     String
  likes    Int        @default(0)
  heading  String
  slug     String     @default(uuid())
  author   User       @relation(fields: [authorId], references: [id])
  authorId String     @default(uuid())
  category Category[]

  updatedAt DateTime @updatedAt

  @@unique([slug, name])
  @@index([authorId])
}

model Category {
  id     String @id @default(uuid())
  genere String
  post   Post[]
}

enum Role {
  ADMIN
  BASIC
  PLUS
}
