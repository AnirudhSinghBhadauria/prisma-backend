generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(cuid()) @map("_id") @db.ObjectId
  name     String?
  email    String  @unique
  password String
  post     Post[]
}

model Post {
  id       String @id @default(cuid()) @map("_id") @db.ObjectId
  title    String
  body     String
  slug     String @unique
  author   User   @relation(fields: [authorId], references: [id])
  authorId String @db.ObjectId
}
