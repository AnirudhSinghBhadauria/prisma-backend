generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id      String   @id @default(uuid())
  name    String?
  email   String   @unique
  posts   Post[]
  profile Profile?
}

model Profile {
  id      String  @id @default(uuid())
  name    String
  age     Int
  isAdmin Boolean
  adress  String
  User    User    @relation(fields: [userId], references: [id])
  userId  String  @unique
}

model Post {
  id       String     @id @default(uuid())
  name     String
  author   User       @relation(fields: [authorId], references: [id])
  authorId String     @default(uuid())
  category Category[]

  updatedAt DateTime @updatedAt

  @@index([authorId])
}

model Category {
  id     String @id @default(uuid())
  genere String
  post   Post[]
}
